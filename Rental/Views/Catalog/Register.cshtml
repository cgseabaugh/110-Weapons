@{
ViewData["Title"] = "Register Item";
}

<h1>Sell your Weapons to the Workshop</h1>



<div class="row">

    <div class="form-group col-md-4" id="label">
        <br>
        <label for="wname"> Name: </label><br>
        <label for="type">Type: </label><br>
        <label for="wdamage">Damage: </label><br>
        <label for="wrequirements">Requirements: </label><br>
        <label for="wprice">Price: </label><br>
        <label for="wdescription">Description: </label><br>
        <label for="wimageurl">Image URL: </label>
    </div>

    <div class="form-group col-md-8" id="input"><br>
        <input type="text" id="wname" name="wname"><br>
        <div class="radio-inline" id="wtype">
                <label><input type="radio" name="optradio" value="1">Trick Weapon</label>
                <label><input type="radio" name="optradio" value="2">Fire Arm</label>
                <label><input type="radio" name="optradio" value="3">Hunter Tool</label>
        </div>
        <input type="Text" id="wdamage" name="wdamage">
        <select class="form-control" id="wdamagetype">
            <option value="1">Physical</option>
            <option value="2">Blood</option>
            <option value="3">Arcane</option>
            <option value="4">Fire</option>
            <option value="5">Bolt</option>
        </select><br>
        <input type="text" id="wrequirements" name="wrequirements"><br>
        <input type="text" id="wprice" name="wprice"><br>
        <input type="text" id="wdescription" name="wdescription"><br>
        <input type="text" id="wimageurl" name="wimageurl">
    </div>

    <div class="button">
        <button id="btnSave" class="btn btn-primary">Register Weapon</button>
    </div>
</div>

@section Styles{
    <link href="/css/register.css" rel="stylesheet">
}
@section Scripts{
    <script src="/js/Catalog/register.js"></script>
}